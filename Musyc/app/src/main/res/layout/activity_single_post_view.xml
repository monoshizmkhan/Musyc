<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inc.musyc.musyc.ActivitiesAndFragments.MusicStream.SinglePostViewActivity"
    android:background="@color/Background_Color"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <ImageView
            android:id="@+id/singlepostview_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/default_avatar"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/singlepostview_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Likes"
            android:textColor="@color/White_Color"
            android:background="@color/colorAccent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:layout_gravity="bottom|left"/>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/Cards_Color"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/singlepostview_bt_like"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/Cards_Color"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_action_name" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="vertical"
            android:background="@color/App_Bar_Color">

            <TextView
                android:id="@+id/singlepostview_title"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="Title: Karone Okarone"
                android:textColor="@color/White_Color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/singlepostview_artist"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="bottom"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="Artist: Minar"
                android:textColor="@color/White_Color"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/singlepostview_lyricsview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/singlepostview_imageview"
        android:layout_centerHorizontal="true"
        android:layout_weight="8"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/White_Color"
        android:textSize="25sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:id="@+id/media_controller"
        android:layout_alignParentBottom="true"
        android:background="@color/App_Bar_Color">

        <ImageButton
            android:id="@+id/singlepostview_bt_play"
            style="@android:style/MediaButton.Play"
            android:background="@color/Cards_Color" />

        <TextView
            android:id="@+id/singlepostview_timecurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:text="00:00"
            android:textColor="@color/White_Color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/singlepostview_mp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dip"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/singlepostview_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:text="00:00"
            android:textColor="@color/White_Color"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>








</LinearLayout>