<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inc.musyc.musyc.ActivitiesAndFragments.MusicStream.SyncMainActivity"
    android:orientation="vertical"
    android:background="@color/Background_Color">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/syncmain_toolbar"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Party"
        android:textAlignment="center"
        android:background="@color/colorAccent"
        android:id="@+id/syncmain_mypartybt"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/syncmain_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/syncmain_toolbar"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/syncmain_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/fab_add"
            app:fab_colorNormal="@color/colorAccent" />
    </FrameLayout>


</LinearLayout>
