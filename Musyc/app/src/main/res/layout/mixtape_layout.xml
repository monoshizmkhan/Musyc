<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/Cards_Color">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/mixtapecard_img"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/defaultmusic"
        android:background="@color/White_Color"/>

    <TextView
        android:id="@+id/mixtapecard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/mixtapecard_img"
        android:maxLength="20"
        android:text="Title"
        android:textAllCaps="true"
        android:textColor="@color/White_Color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mixtapecard_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mixtapecard_title"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/mixtapecard_img"
        android:maxLength="200"
        android:maxLines="3"
        android:text="Description"
        android:textColor="@color/White_Color"
        android:textSize="10sp" />

</RelativeLayout>