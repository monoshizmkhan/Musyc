<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background_Color"
    tools:context="com.example.monoshizjishnu.dbtester.Playlist">

    <Button
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:background="@drawable/border"
        android:id="@+id/ending"
        />


    <ImageButton
        android:layout_width="25sp"
        android:layout_height="23sp"
        android:layout_marginTop="2dp"
        android:src="@drawable/back"
        android:scaleType="fitCenter"
        android:background="@drawable/border"
        android:id="@+id/back"
        android:focusable="false"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Libray"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@+id/back"
        android:focusable="false"
        />


    <Button
        android:id="@+id/lib"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:text="Library"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/search"
        android:layout_toLeftOf="@+id/feed"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:textColorHighlight="#C8BFE7"
        />

    <ImageButton
        android:id="@+id/searchicon"
        android:focusable="false"
        android:layout_width="20sp"
        android:layout_height="45sp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/back"
        android:src="@drawable/search"
        android:scaleType="fitCenter"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        />

    <EditText
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back"
        android:hint="Search and Play"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_toLeftOf="@+id/searchicon"
        android:backgroundTint ="#C8BFE7"
        android:layout_toRightOf="@+id/back"
        />

    <Button
        android:id="@+id/feed"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text=""
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/search"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/menu"
        android:focusable="false"
        android:layout_width="15sp"
        android:layout_height="15sp"
        android:src="@drawable/menu"
        android:scaleType="fitCenter"
        android:background="@drawable/border"
        android:layout_below="@+id/search"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/feed"
        android:layout_alignParentRight="true"
        />

    <Button
        android:id="@+id/all"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed"
        android:background="#333333"
        android:textColor="@android:color/white"
        android:text="All"
        android:textSize="15sp"
        android:drawableBottom="#5393BF"
        android:layout_marginLeft="80dp"
        />

    <Button
        android:id="@+id/customplaylist"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:text="Playlists"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="90dp"
        android:drawableBottom="#5393BF"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/all"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:id="@+id/emptylist"
        />

        <ListView
            android:focusable="false"
            android:descendantFocusability="blocksDescendants"
            android:scrollbars="vertical"
            android:scrollbarStyle="insideOverlay"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarSize="7dp"
            android:scrollbarThumbVertical="@android:color/darker_gray"
            android:scrollbarDefaultDelayBeforeFade="@android:integer/config_shortAnimTime"
            android:scrollbarTrackVertical="@android:color/black"
            android:id="@+id/playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/white"
            android:dividerHeight="1dp"
            android:layout_below="@+id/all"
            android:layout_above="@+id/play"
            >
        </ListView>


    <TextView
        android:layout_width="match_parent"
        android:focusable="false"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#111111"
        />

    <ImageButton
        android:id="@+id/prev"
        android:focusable="false"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/prev"
        android:scaleType="fitCenter"
        android:background="@drawable/border"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        />


    <ImageButton
        android:id="@+id/play"
        android:focusable="false"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/play"
        android:scaleType="fitCenter"
        android:background="@drawable/border"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/prev"
        />

    <ImageButton
        android:id="@+id/next"
        android:focusable="false"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/next"
        android:scaleType="fitCenter"
        android:background="@drawable/border"
        android:layout_above="@+id/blankablank"
        android:layout_toRightOf="@+id/play"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        />

    <TextView
        android:id="@+id/songname"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playlist"
        android:layout_above="@+id/blankfortext"
        android:layout_toRightOf="@+id/next"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/artistname"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/songname"
        android:layout_toRightOf="@+id/next"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:maxLines="1"
        />
</RelativeLayout>
